{
  "name": "graph-visualization-monorepo",
  "private": true,
  "version": "0.1.0",
  "description": "WebAssembly-based real-time data visualization application with high-performance GPU-accelerated rendering",
  "workspaces": [
    "web"
  ],
  "scripts": {
    "dev": "cd web && npm run dev",
    "dev:web": "concurrently \"npm run dev:watch\" \"npm run dev\"",
    "dev:suite": "concurrently \"npm run dev:watch\" \"npm run dev:server\" \"npm run dev\"",
    "dev:suite:full": "concurrently \"npm run dev:watch\" \"npm run dev:server\" \"npm run dev:logger\" \"npm run dev\"",
    "dev:wasm": "cd crates/wasm-bridge && wasm-pack build --target web --out-dir ../../web/pkg --dev",
    "dev:watch": "node -e \"process.platform==='win32'?require('child_process').spawn('cmd',['/c','scripts\\\\dev-build.cmd'],{stdio:'inherit',shell:true}):require('child_process').spawn('./scripts/dev-build.sh',{stdio:'inherit',shell:true})\"",
    "dev:server": "cd server && cargo run",
    "dev:server:build": "cd server && cargo build",
    "dev:logger": "cd logger && cargo run",
    "dev:logger:build": "cd logger && cargo build",
    "setup:ssl": "./scripts/setup-ssl.sh",
    "build": "npm run build:wasm && cd web && npm run build",
    "build:wasm": "cd crates/wasm-bridge && wasm-pack build --target web --out-dir ../../web/pkg",
    "build:server": "cd server && cargo build --release --target x86_64-unknown-linux-gnu",
    "build:logger": "cd logger && cargo build --release --target x86_64-unknown-linux-gnu",
    "docker:build:server": "./scripts/build-server-docker.sh",
    "docker:run:server": "docker run -d --name gpu-charts-server -p 8443:8443 -v /mnt/md/data:/mnt/md/data:ro --restart unless-stopped gpu-charts-server:latest",
    "docker:stop:server": "docker stop gpu-charts-server && docker rm gpu-charts-server",
    "docker:logs:server": "docker logs -f gpu-charts-server",
    "docker:shell:server": "docker exec -it gpu-charts-server /bin/bash",
    "docker:deploy:server": "npm run docker:build:server && npm run docker:stop:server || true && npm run docker:run:server",
    "test": "npm run test:server",
    "test:all": "npm run test:server && npm run test:web",
    "test:server": "cd server && cargo test --target x86_64-unknown-linux-gnu",
    "test:logger": "cd logger && cargo test --target x86_64-unknown-linux-gnu",
    "test:web": "cd web && npm run test",
    "test:data": "cd web && npm run test:data",
    "test:basic": "cd web && npm run test:basic",
    "test:visual": "cd web && npm run test:visual",
    "test:visual:update": "cd web && npm run test:visual:update",
    "test:visual:headed": "cd web && npm run test:visual:headed",
    "test:visual:ui": "cd web && npm run test:visual:ui",
    "test:visual:docker": "cd web && npm run test:visual:docker",
    "lint": "cd web && npm run lint",
    "clean": "rm -rf web/pkg && cargo clean"
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "lucide-react": "^0.445.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@eslint/plugin-kit": "^0.3.4",
    "@playwright/test": "^1.52.0",
    "@types/node": "^24.0.2",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.20",
    "balanced-match": "^3.0.1",
    "brace-expansion": "^4.0.1",
    "concurrently": "^9.1.2",
    "eslint": "^9.31.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.2",
    "vite": "^6.3.5",
    "vite-plugin-top-level-await": "^1.5.0",
    "vite-plugin-wasm": "^3.4.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/masteryachty/gpu-charts.git"
  },
  "keywords": [
    "webassembly",
    "webgpu",
    "rust",
    "react",
    "typescript",
    "data-visualization",
    "real-time",
    "financial-data",
    "trading"
  ],
  "author": "masteryachty",
  "license": "MIT"
}