{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@pkg/*": ["./pkg/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"],
  "exclude": [
    "node_modules", 
    "dist",
    "src/services/DataFetchingService.ts",
    "src/hooks/useAutonomousDataFetching.ts",
    "src/hooks/useErrorHandler.ts",
    "src/components/monitoring/DataFetchingMonitor.tsx",
    "src/errors/ErrorHandler.ts",
    "src/performance/PerformanceMonitor.ts",
    "src/types/advanced-types.ts",
    "src/types/store.ts",
    "src/types/type-guards.ts",
    "src/utils/performance-monitor.ts"
  ]
}